---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Reviews',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <Fragment slot="header">
    <Header
      position="left"
      links={[
        { text: 'Home', href: '/' },
        { text: 'About', href: '/404' },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="See What Your Neighbors Are Saying"
    testimonials={[
      {
        testimonial: `Fort Worth Heat & Air replaced my old AC systems in both my home and studio apartment. Service, workmanship, and product quality were all excellent. I recommend them to our friends and family without hesitation.`,
        name: 'Robert Edmondson',
        job: 'Customer',
      },
      {
        testimonial: `Special thanks to Mike for the help with our AC and getting us cool so quickly in this Texas heat! Great company to work with. We highly recommend!`,
        name: 'Jennifer Overfield',
        job: 'Customer',
      },
      {
        testimonial:'My AC stopped working and these guys were out there the next day. They fixed it on the spot and were very professional and resonably priced. They have definitely earned my business and I can not reccomend them enough!',
        name: 'Zac Treadway',
        job: 'Customer',
      },
      {
        testimonial:
          'Great people, very knowledgeable and reasonably priced. They won’t try to upsell you on things you don’t need. Very honest, highly recommend.',
        name: 'Chris Yurasits',
        job: 'Customer',
      },
      {
        testimonial:
          'Greg and Mike are fantastic. I’ve used them several times over the past few years at multiple properties. I won’t use anybody else now. They are extremely knowledgeable, professional, explain things well, and I have always felt they took the time to solve the problem right. I never felt like they rushed or cut corners. I appreciate that.',
        name: 'Matthew Vickrey',
        job: 'Customer',
      },
      {
        testimonial:
          'Fort Worth Heat and Air put in a new unit that works great, and at a very good price. The whole team did a great job. They are very good and honest people. I highly recommend them!',
        name: 'Vikki Irwin',
        job: 'Customer',
      },
    ]}
    callToAction={{
      target: '_self',
      text: 'Read more EVEN MORE reviews',
      href: 'https://www.yelp.com/biz/fort-worth-heat-and-air-fort-worth-3',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Still have some doubts?"
    items={[
      {
        title: 'What services does Fort Worth Heat and Air offer?',
        description:
          'We provide full HVAC services including installation, repair, and maintenance of heating, ventilation, and air conditioning systems for both residential and commercial properties.',
      },
      {
        title: 'How often should I have my HVAC system serviced?',
        description:
          'We recommend scheduling a professional HVAC maintenance check at least twice a year — once before the summer for your AC and once before the winter for your heating system — to ensure optimal performance and extend the life of your equipment.',
      },
      {
        title: 'What are the signs that my AC or heater needs repair?',
        description: `Common signs include inconsistent temperatures, unusual noises, higher energy bills, bad odors, or the system failing to turn on. If you notice any of these, give us a call right away.`,
      },
      {
        title: 'How can I improve my home’s energy efficiency?',
        description:
          'Regular HVAC maintenance, upgrading to energy-efficient models, sealing ductwork leaks, and using programmable thermostats can all help reduce energy costs.',
      },
      {
        title: 'What brands do you service?',
        description:
          'We service all major HVAC brands including Trane, Carrier, Lennox, Rheem, Goodman, and more.',
      },
    ]}
  />
</Layout>
