---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import { Image } from 'astro:assets';
import hvacImage from 'src/assets/images/hopecowboybg.png';
import longhornImage from 'src/assets/images/longhornnobg.png';
import parchmentTexture from 'src/assets/images/parchment.png';
import CustomStyles from '~/components/CustomStyles.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';




import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'SaaS Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Request A Service',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero.astro or inside your page -->
<section
  class="text-[#3A2B1C] py-16 px-4 sm:px-8 lg:px-20 bg-[url('/src/assets/images/paper-texture.png')] bg-repeat"
>

  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 items-center gap-10">
    
    <!-- Left Column: Text -->
    <div class="order-2 lg:order-1 space-y-6 text-center lg:text-left" data-aos="fade-up" data-aos-duration="800">
      <!-- Texas Badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-[#8B2E1A] text-white rounded-full shadow-md text-xs uppercase tracking-widest">
        <span class="text-lg">★</span>
        Fort Worth Proud • Est. 2013
      </div>

      <!-- Heading -->
      <h1 class="text-4xl sm:text-6xl font-extrabold leading-tight text-shadow-md">
        Fort Worth <br />
        <span style="color: #8B2E1A">Heat</span> And   <span style="color: #4e6f88
">Air</span>
      </h1>

      <!-- Paragraph -->
      <p class="text-lg sm:text-2xl text-[#3A2B1C]/90">
        Serving the Fort Worth community with honest, expert HVAC care.
Local Air Conditioning and Heating Solutions – Fast, Friendly, and Fair.
      </p>

      <!-- Call to Action Buttons -->
      <div class="flex gap-4 flex-wrap justify-center lg:justify-start">
        <a
          href="/contact"
          class="bg-[#8B2E1A] hover:bg-[#5a180d] text-white px-6 py-3 rounded-full font-semibold shadow-md transition hover:scale-105"
        >
          Contact Us
        </a>
        <a
          href="#learn-more"
          class="border border-[#3A2B1C] hover:bg-[#e9d5b4] text-[#3A2B1C] px-6 py-3 rounded-full font-semibold transition"
        >
          Learn More
        </a>
      </div>

      <!-- Rating -->
      <div class="flex items-center justify-center lg:justify-start gap-2 pt-4 text-sm text-[#3A2B1C]">
        <span class="text-xl text-yellow-500">★★★★★</span>
        <a href="/reviews" class="font-medium hover:underline">
    Rated 5 Stars by Fort Worth Homeowners
  </a>
      </div>
    </div>

    <!-- Right Column: Image -->
   <div class="order-1 lg:order-2 w-full max-w-[600px] mx-auto">
      <Image
        src={hvacImage}
        alt="HVAC Cowboy fixing equipment"
        class="w-full h-auto object-contain rounded-xl transition-transform duration-300 hover:scale-105"
        loading="eager"
      />
    </div>
  </div>
</section>

  <!-- Pricing Widget ******************* -->

 <Pricing
    title="Learn About Our Services"
    prices={[
      {
        title: 'Heating',
        subtitle: 'Access to core features and a wide range of templates',
        price: '✸',
        period: '/ month',
        callToAction: {
          target: '_blank',
          text: 'Get Started for Free',
          href: '#',
        },
      },
      {
        title: 'Cooling',
        subtitle: 'Premium templates and advanced customization',
        price: '❆',
        period: '/ Month',
        callToAction: {
          target: '_blank',
          text: 'Learn More',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'SUMMER',
      },
      {
        title: 'Indoor Air Quality',
        subtitle: 'Tailored solutions for large-scale projects',
        price: '〰',
        period: '/ Month',
        callToAction: {
          target: '_blank',
          text: 'Unlock Enterprise Features',
          href: '#',
        },
      },
    ]}
  />



  <!-- Features Widget *************** -->

<Features
  id="features"
  title="Why People Choose Us"
  subtitle="Proudly serving the Dallas / Fort Worth Metroplex and surrounding areas with over 35 years of trusted experience."
  columns={2}
  items={[
    {
      title: 'Residential Heating & Cooling',
      description:
        'Complete HVAC solutions for homes, including AC installation, furnace repair, and seasonal maintenance to keep your family comfortable year-round.',
      icon: 'tabler:home',
    },
    {
      title: 'Commercial HVAC Systems',
      description:
        'Expert installation and servicing of rooftop units, chillers, and VAV systems for businesses, warehouses, and large commercial properties.',
      icon: 'tabler:building-skyscraper',
    },
    {
      title: '24/7 Emergency HVAC Repair',
      description:
        'Fast, responsive emergency service—any time, any day—to get your system back up and running when it matters most.',
      icon: 'tabler:alert-triangle',
    },
    {
      title: 'Indoor Air Quality Solutions',
      description:
        'From air purifiers to humidity control, we improve your indoor air quality to create a healthier home or workspace.',
      icon: 'tabler:wind',
    },
    {
      title: 'Routine Maintenance Plans',
      description:
        'Protect your investment and prevent costly breakdowns with seasonal inspections, tune-ups, and filter replacements.',
      icon: 'tabler:calendar-check',
    },
    {
      title: 'Certified HVAC Technicians',
      description:
        'Our licensed, factory-trained technicians are equipped to handle all makes and models with precision and professionalism.',
      icon: 'tabler:certificate',
    },
  ]}
/>


  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="See What Your Neighbors Are Saying"
    testimonials={[
      {
        testimonial: `Fort Worth Heat & Air replaced my old AC systems in both my home and studio apartment. Service, workmanship, and product quality were all excellent. I recommend them to our friends and family without hesitation.`,
        name: 'Robert Edmondson',
        job: 'Customer',
      },
      {
        testimonial: `Special thanks to Mike for the help with our AC and getting us cool so quickly in this Texas heat! Great company to work with. We highly recommend!`,
        name: 'Jennifer Overfield',
        job: 'Customer',
      },
      {
        testimonial:'My AC stopped working and these guys were out there the next day. They fixed it on the spot and were very professional and resonably priced. They have definitely earned my business and I can not reccomend them enough!',
        name: 'Zac Treadway',
        job: 'Customer',
      },
    ]}
    callToAction={{
      target: '_self',
      text: 'More Reviews',
      href: '/reviews',
      icon: 'tabler:chevron-right',
      class: 'bg-[#8B2E1A] hover:bg-[#732515] text-white px-6 py-3 rounded-md'
    }}
  />

  <!-- Content Widget **************** -->

<Content
  isReversed
  items={[
    {
      title: "Why Fort Worth Heat & Air",
      description: `
        <p class="text-brown text-lg leading-relaxed mb-4">
          Proudly serving Fort Worth and nearby Texas communities with trusted heating, cooling, and indoor air quality services since day one.
        </p>
        <p class="text-brown text-lg leading-relaxed mb-4">
          Here in Texas, we believe in good, honest work — and that means showing up when you call, answering your questions clearly, and standing behind every job we do. No gimmicks, no “sales tricks,” just real expertise from true heating and cooling pros who know how to keep your home comfortable year-round.
        </p>
        <p class="text-brown text-lg leading-relaxed mb-4">
          Our certified technicians specialize in heating, cooling, and indoor air quality — ensuring you breathe easier, stay cozy in winter, and cool down in the blazing Texas heat. With our in-house training and commitment to honest service, you get peace of mind and a job done right the first time.
        </p>
        <p class="text-brown text-lg leading-relaxed">
          Got a problem? Whether it’s your heater, AC, or indoor air system acting up, Fort Worth Heat and Air has your back. Call us today and experience Texas-style care and expertise that feels like family.
        </p>
      `,
    },
  ]}
  image={{
    src: longhornImage,
    alt: 'Heating and Cooling Services',
  }}
>
  <Fragment slot="content" />
  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
  </Fragment>
</Content>


  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Request Your Service Today!"
    subtitle="We're always happy to help. The best way to contact us is through phone or email!"
    callToAction={{
      text: 'Contact us',
      href: '/contact',
    }}
    items={[
      {
        title: 'Email us',
        description: 'info@fortworthheatandair.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Call us',
        description: '(817)-800-0340',
        icon: 'tabler:headset',
      },
      {
        title: 'Location',
        description: '308 N Beach St, Fort Worth TX',
        icon: 'tabler:brand-twitter',
      },
    ]}
  />

</Layout>
